{
  "builds": [
    {
      "src": "caribou_dashboard/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.11",
        "env": {
          "DJANGO_SETTINGS_MODULE": "caribou_dashboard.settings",
          "PYTHONUNBUFFERED": "1"
        },
        "buildCommand": "pip install --upgrade pip && pip install -r requirements.txt && python manage.py collectstatic --no-input && python manage.py migrate"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "caribou_dashboard/wsgi.py"
    }
  ],
  "postinstall": "pip install wheel"
}
